        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            var isLoggedIn = token !== null;

            if (isLoggedIn) {
                // Пользователь авторизован, показываем соответствующее содержимое
                document.getElementById('unauthContent').style.display = 'none';
                document.getElementById('authContent').style.display = 'flex';
            } else {
                // Пользователь не авторизован, скрываем содержимое для авторизованных пользователей
                document.getElementById('authContent').style.display = 'none';
                document.getElementById('unauthContent').style.display = 'flex';
